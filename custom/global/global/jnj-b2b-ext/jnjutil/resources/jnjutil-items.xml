<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

		<enumtypes>
		<enumtype generate="true" code="MessageCategory" autocreate="true"
			jaloclass="de.hybris.platform.jalo.enumeration.EnumerationValue">
			<value code="Exception" />
			<value code="Label" />
			<value code="Validation" />
			<value code="Generic" />
		</enumtype>
		
	</enumtypes>
	<itemtypes>
<itemtype generate="true" code="MessageItem" extends="CMSItem"
			jaloclass="com.accenture.jalo.Message" autocreate="true">
			<attributes>
				<attribute qualifier="messageText" type="localized:java.lang.String">
					<description>The text of a message</description>
					<modifiers dontOptimize="true"/>
					<persistence type="property" />
				</attribute>
				<attribute qualifier="messageCategory" type="MessageCategory">
					<description>The text of a message</description>
					<modifiers read="true" write="true" search="true"
						optional="false" />
					<persistence type="property" />
				</attribute>
			</attributes>
			<indexes>
				<index name="uid">
					<key attribute="uid" />
				</index>
			</indexes> 
            </itemtype>		
	</itemtypes> 
</items>
