					<td style="width:900px"><cockpit code="property" value="CMSParagraphComponent.content"/></td>
					<td><div style="height:6px"/></td>
				</tr>
				<tr>
					<td style="width:900px"><cockpit code="property" value="BroadcastMessage.allMDDAccounts"/></td>
