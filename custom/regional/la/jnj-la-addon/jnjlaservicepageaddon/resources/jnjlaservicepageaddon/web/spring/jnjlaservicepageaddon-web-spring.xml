<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/> 

	<!-- <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/> -->

	<!-- Expose /acceleratoraddon/web/webroot/WEB-INF/messages/base.js.properties  resource bundle as javascript variables -->
	<bean id="defaultJnjlaservicepageaddonJavaScriptMessageResourceAccessor" parent="abstractJavaScriptMessageResourceAccessor">
		<property name="addOnName" value="jnjlaservicepageaddon"/>
	</bean>

	<bean id="defaultJnjlaservicepageaddonBeforeViewJsPropsHandlerAdaptee" parent="abstractBeforeViewJsPropsHandlerAdaptee" class="de.hybris.platform.addonsupport.interceptors.ExportJsPropertiesBeforeViewHandler">
		<property name="messageSource" ref="defaultJnjlaservicepageaddonJavaScriptMessageResourceAccessor"/>
	</bean>
	
	<bean id="servicesPageController" class="com.jnj.la.jnjlaservicepageaddon.controllers.pages.JnjServicesPageController" />
	<alias alias="jnjServicesPageController" name="servicesPageController" />

	<bean id="clsPageController" class="com.jnj.la.jnjlaservicepageaddon.controllers.pages.JnjLaClsPageController" />

    <bean id="beforeViewHandlerAdapter"
          class="de.hybris.platform.cms2.interceptors.BeforeViewHandlerAdapter"/>

    <bean id="getJnjlaservicepageaddonBeforeViewHandler" parent="beforeViewHandlerAdapter">
		<property name="adaptee">
			<ref bean="defaultJnjlaservicepageaddonBeforeViewJsPropsHandlerAdaptee"/>
		</property>
	</bean>
	<bean id="JnjlaservicepageaddonBeforeViewHandlerListMergeDirective" depends-on="beforeViewHandlersList" parent="listMergeDirective">
		<property name="add" ref="getJnjlaservicepageaddonBeforeViewHandler"/>
	</bean>

</beans>
