<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/> 

	<!-- <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/> -->


	<!-- Expose /acceleratoraddon/web/webroot/WEB-INF/messages/base.js.properties  resource bundle as javascript variables -->
	<bean id="defaultJnjlaresourcesJavaScriptMessageResourceAccessor" parent="abstractJavaScriptMessageResourceAccessor">
		<property name="addOnName" value="jnjlaresources"/>
	</bean>

	<bean id="defaultJnjlaresourcesBeforeViewJsPropsHandlerAdaptee" parent="abstractBeforeViewJsPropsHandlerAdaptee" class="de.hybris.platform.addonsupport.interceptors.ExportJsPropertiesBeforeViewHandler">
		<property name="messageSource" ref="defaultJnjlaresourcesJavaScriptMessageResourceAccessor"/>
	</bean>

	<bean id="getJnjlaresourcesBeforeViewHandler" parent="beforeViewHandlerAdapter">
		<property name="adaptee">
			<ref bean="defaultJnjlaresourcesBeforeViewJsPropsHandlerAdaptee"/>
		</property>
	</bean>
	<bean id="JnjlaresourcesBeforeViewHandlerListMergeDirective" depends-on="beforeViewHandlersList" parent="listMergeDirective">
		<property name="add" ref="getJnjlaresourcesBeforeViewHandler"/>
	</bean>
	
	<bean name="jnjLatamUserManagementPageController" class="com.jnj.la.b2b.jnjlaresources.controllers.pages.JnjLatamUserManagementPageController" />
	<alias alias="jnjGTUserManagementPageController" name="jnjLatamUserManagementPageController" /> 
	
	<bean name="jnjLatamResourcesPageController" class="com.jnj.la.b2b.jnjlaresources.controllers.pages.JnjLatamResourcesPageController" />
	<alias alias="JnjGTResourcesPageController" name="jnjLatamResourcesPageController" />
	
</beans>
