#
# Import the CMS Site configuration for the JNJ EPIC MDD-DE Store
#
$UYproductCatalog=uyProductCatalog
$UYContentCatalog=uyContentCatalog
$contentCV=catalogVersion(CatalogVersion.catalog(Catalog.id[default=$UYContentCatalog]),CatalogVersion.version[default=Staged])[default=$UYContentCatalog:Staged]
$languages=en,pt,es
$defaultLanguage=es
$defaultCountry=UY
$UYStoreUid=uyBaseStore
$UYSiteUid=uyCMSsite

# Import config properties into impex macros
UPDATE GenericItem[processor=de.hybris.platform.commerceservices.impex.impl.ConfigPropertyImportProcessor];pk[unique=true]

# Load the storefront context root config param
$storefrontContextRoot=$config-b2bStorefrontContextRoot

#% final String configValue = Config.getParameter("deployment.env");
#% if: configValue.equals("local"); 

