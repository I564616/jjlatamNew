;$UYSiteUid;J&J CUSTOMER CONNECT;jnj;B2B;$UYStoreUid;$UYContentCatalog;$UYproductCatalog;$defaultLanguage;$defaultCountry;(?i)^https?://uy-local\.jjcustomerconnect\.[^/]+(|/.*|\?.*)$;true;$storefrontContextRoot/?site=$UYSiteUid;language;$languages;MDD

